<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	
	<ui:style>
		.important {
			font-weight: bold;
		}
		.hspace{
			padding: 5px;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<div class="search-row">
			<table align='center'>
				<tr>
					<td>
						<font color="red">*</font>	
					</td>
					<td>
						<g:Label width="200" text="Utilisateur ">*</g:Label>
					</td>
					<td>
						<g:Label styleName="{style.hspace}" />
					</td>
					<td>
						<g:TextBox width="200" ui:field="userBox"></g:TextBox>
					</td>
				</tr>
				<tr>
					<td>
						<font color="red">*</font>	
					</td>
					<td>
						<g:Label width="200" text="Mot de passe " >*</g:Label>
					</td>
					<td>
						<g:Label styleName="{style.hspace}" />
					</td>
					<td>
						<g:PasswordTextBox width="200" ui:field="passBox"></g:PasswordTextBox>
					</td>
				</tr>
				<tr colspan='4'>
					<td>
						<p />
					</td>
				</tr>
				<tr>
					<td align='center' colspan='4'>
						<b:Button ui:field="validate" text="Se connecter" type="SUCCESS" icon="SIGNIN"></b:Button>
						<b:Button ui:field="reset" text="Effacer" type="INFO" icon="REMOVE"></b:Button>
					</td>
				</tr>
			</table>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 